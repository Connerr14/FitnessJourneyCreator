@model IEnumerable<FitnessJourneyCreator.Models.Mesocycle>

@{
    ViewData["Title"] = "Mesocycles";
}

<h1>Your Mesocycles</h1>

@if (User.Identity.IsAuthenticated) {
    <p class="instructions">
        <a asp-action="Create">Create a New Mesocycle</a>
        <a asp-controller="Microcycles" asp-action="Index">Modify Microcycles</a>
    </p>
}
else
{
    <p class="instructions">
        <a asp-area="Identity" asp-page="/Account/Login">Log in to customize plan details</a>
        <a asp-controller="Microcycles" asp-action="Index">See the Microcycles</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MesocycleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Macrocycle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MesocycleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Macrocycle.MacrocycleName)
            </td>
            @if (User.Identity.IsAuthenticated)
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MesocycleId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MesocycleId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MesocycleId">Delete</a>
                </td>
            }
        </tr>
}
    </tbody>
</table>
