@model FitnessJourneyCreator.Models.Workout

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit a Workout</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WorkoutId" />
            <div class="form-group">
                <label asp-for="WorkoutName" class="control-label"></label>
                <input asp-for="WorkoutName" class="form-control" />
                <span asp-validation-for="WorkoutName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkoutDay" class="control-label"></label>
                <input asp-for="WorkoutDay" class="form-control" />
                <span asp-validation-for="WorkoutDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MicrocycleId" class="control-label"></label>
                <select asp-for="MicrocycleId" class="form-control" asp-items="ViewBag.MicrocycleId"></select>
                <span asp-validation-for="MicrocycleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
