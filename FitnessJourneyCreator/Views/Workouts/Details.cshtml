@model FitnessJourneyCreator.Models.Workout

@{
    ViewData["Title"] = "Details";
}

<h1>Workout Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WorkoutName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WorkoutName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WorkoutDay)
            <p class="dayIdentifier">(Sunday = 1, Saturday = 7)</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WorkoutDay)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Microcycle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Microcycle.MicrocycleName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.WorkoutId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
