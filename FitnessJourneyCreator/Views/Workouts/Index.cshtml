@model IEnumerable<FitnessJourneyCreator.Models.Workout>

@{
    ViewData["Title"] = "Workouts";
}

<h1>Your Workouts</h1>

<p class="instructions">
    <a asp-action="Create">Create New</a>
    <a asp-controller="WorkoutExercises" asp-action="Index">Add Exercises to Your Workouts</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorkoutName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkoutDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Microcycle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkoutName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkoutDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Microcycle.MicrocycleName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WorkoutId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WorkoutId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WorkoutId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
