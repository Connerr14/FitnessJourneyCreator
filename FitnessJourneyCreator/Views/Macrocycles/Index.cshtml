@model IEnumerable<FitnessJourneyCreator.Models.Macrocycle>

@{
    ViewData["Title"] = "Macrocycles";
}

<h1>Your Macrocycles</h1>

<p class="instructions">
    <a asp-action="Create">Create a New Macrocycle</a>
    <a asp-controller="Mesocycles" asp-action="Index">Modify Mesocyles</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MacrocycleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkoutPlan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MacrocycleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkoutPlan.PlanName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MacrocycleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MacrocycleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MacrocycleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
